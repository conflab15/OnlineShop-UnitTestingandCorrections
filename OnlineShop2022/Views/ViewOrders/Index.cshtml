@model ViewOrdersViewModel

@{
    ViewData["Title"] = "My Orders";
}


<h1>Orders for: @Model.CustomerEmail.ToString()</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Order ID
            </th>
            <th>
                Order Placed
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Order Status
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Order) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderPlaced)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-secondary">View Order</a>
            </td>
        </tr>
}
    </tbody>
</table>
