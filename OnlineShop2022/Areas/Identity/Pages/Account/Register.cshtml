@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row text-center" id="signInBody">
    <h1>@ViewData["Title"]</h1>
    <br />
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h1 class="h3 mb-3 fw-normal">Register an Account</h1>

        <div asp-validation-summary="All" class="text-danger"></div>
         <div class="form-floating pt-2">
            <input asp-for="Input.Fname" class="form-control" id="floatingInput" placeholder="John">
            <label for="floatingInput">Forename</label>
            <span asp-validation-for="Input.Fname" class="text-danger"></span>
        </div>
         <div class="form-floating pt-2">
            <input asp-for="Input.Sname" class="form-control" id="floatingInput" placeholder="Doe">
            <label for="floatingInput">Surname</label>
            <span asp-validation-for="Input.Sname" class="text-danger"></span>
        </div>
        <div class="form-floating pt-2">
            <input asp-for="Input.Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating pt-2">
            <input asp-for="Input.Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-floating pt-2">
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <br />
        <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
    </form>
    <br />
    <h4 class="pt-4">Use another service to register.</h4>
    <hr />
    @{
        if ((Model.ExternalLogins?.Count ?? 0) == 0)
        {
            <div>
                <p>
                    There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                    for details on setting up this ASP.NET application to support logging in via external services.
                </p>
            </div>
        }
        else
        {
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                <div>
                    <button type="submit" class="btn btn-lg btn-outline-dark"  role="button" style="text-transform:none" name="provider" value="Google">
                        <img width="20px" style="margin-bottom:3px; margin-right:5px" alt="Google sign-in" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" />
                        Register with Google
                    </button>
                </div>
            </form>
        }
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
