@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Role Manager";
}
<h1>Roles Management</h1>

<form method="post" asp-action="AddRole" asp-controller="RolesManager">
    <div class="input-group">
        <input name="roleName" class="form-control w-25" />
        <span class="input-group-btn">
            <button class="btn btn-info">Add New Role</button>
        </span>
    </div>
</form>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Role</th>
        </tr>
        
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <!-- Error here, the asp-route-id passes a name to the DeleteRole method instead of the ID, which causes a NullException error-->
                    <!-- The fixed code replaced the asp-route-id with role.Id -->
                    <a class="btn btn-danger" asp-action="DeleteRole" asp-route-id="@role.Id">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>


